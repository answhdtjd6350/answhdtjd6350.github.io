<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#90C7A0CC"
        android:drawableLeft="@drawable/ic_baseline_home_24"
        android:fontFamily="@font/answhdtjd"
        android:paddingLeft="15sp"
        android:text=" HOME"
        android:textColor="#9A71AF"
        android:textSize="40sp" />

    <LinearLayout
        android:background="#FFFFFFFF"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/answhdtjd"
            android:gravity="center"
            android:text="화재감지:"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/answhdtjd"
            android:gravity="center_vertical"
            android:text="정상작동"
            android:textColor="#615F5F" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/answhdtjd"
            android:gravity="center"
            android:text="CCTV:"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/answhdtjd"
            android:gravity="center_vertical"
            android:text="정상작동"
            android:textColor="#615F5F" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="540dp"
        android:orientation="horizontal"
        android:background="@drawable/layout">

        <LinearLayout
            android:background="#FFFFFFFF"
            android:layout_width="136dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="98dp"
                android:fontFamily="@font/answhdtjd"
                android:gravity="center"
                android:text="미세먼지"
                android:textSize="20dp"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/img_dust"
                android:layout_width="match_parent"
                android:layout_height="208dp"
                app:srcCompat="@drawable/smile" />

            <TextView
                android:id="@+id/text_result_dust"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:fontFamily="@font/answhdtjd"
                android:gravity="center"
                android:text="좋음"
                android:textSize="20dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/text_number_dust"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="15㎍/m³" />
        </LinearLayout>

        <LinearLayout
            android:background="#FFFFFFFF"
            android:layout_width="136dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="98dp"
                android:fontFamily="@font/answhdtjd"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="온도" />

            <ImageView
                android:id="@+id/img_temp"
                android:layout_width="match_parent"
                android:layout_height="208dp"
                app:srcCompat="@drawable/crying" />

            <TextView
                android:id="@+id/text_result_temp"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:fontFamily="@font/answhdtjd"
                android:gravity="center"
                android:text="나쁨"
                android:textSize="20dp"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/text_number_temp"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="33°C" />
        </LinearLayout>

        <LinearLayout
            android:background="#FFFFFFFF"
            android:layout_width="136dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView27"
                android:layout_width="match_parent"
                android:layout_height="98dp"
                android:fontFamily="@font/answhdtjd"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="습도" />

            <ImageView
                android:id="@+id/img_humi"
                android:layout_width="match_parent"
                android:layout_height="208dp"
                app:srcCompat="@drawable/expressionless" />

            <TextView
                android:id="@+id/text_result_humi"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:fontFamily="@font/answhdtjd"
                android:gravity="center"
                android:text="보통"
                android:textSize="20dp"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/text_number_humi"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="66%" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>