<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:background="#90C7A0CC"
            android:drawableLeft="@drawable/ic_baseline_shopping_cart_24"
            android:fontFamily="@font/answhdtjd"
            android:paddingLeft="15sp"
            android:text=" 데일리키트"
            android:textColor="#9A71AF"
            android:textSize="40sp" />

        <Button
            android:id="@+id/resetbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#90C7A0CC"
            android:layout_gravity="right"
            android:text="초기화"
            android:textSize="15sp"
            android:autoSizeMaxTextSize="40dp"
            android:autoSizeMinTextSize="10dp"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/answhdtjd"
            android:layout_marginTop="-20dp"
            android:textColor="#9A71AF"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="297dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/dailybtn1"
            android:layout_width="300px"
            android:layout_height="450px"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:autoSizeMaxTextSize="40dp"
            android:autoSizeMinTextSize="10dp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/button2"
            android:fontFamily="@font/answhdtjd"
            android:gravity="center"
            android:text="+"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/dailybtn2"
            android:layout_width="300px"
            android:layout_height="450px"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:autoSizeMaxTextSize="40dp"
            android:autoSizeMinTextSize="10dp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/button2"
            android:fontFamily="@font/answhdtjd"
            android:gravity="center"
            android:text="+"
            android:textColor="@color/black" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/texttime1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/answhdtjd"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/texttime2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/answhdtjd"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/black"
            android:textSize="20dp" />/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="66dp">


        <TextView
            android:id="@+id/textdate1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:layout_weight="1"
            android:fontFamily="@font/answhdtjd"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/black"
            android:textSize="20dp" />
        />

        <TextView
            android:id="@+id/textdate2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:layout_weight="1"
            android:fontFamily="@font/answhdtjd"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/black"
            android:textSize="20dp" />
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/timebtn"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/button2"
            android:fontFamily="@font/answhdtjd"
            android:text="시간설정 1"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <Button
            android:id="@+id/datebt"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/button2"
            android:fontFamily="@font/answhdtjd"
            android:text="날짜설정 1"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <Button
            android:id="@+id/timebtn1"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/button2"
            android:fontFamily="@font/answhdtjd"
            android:text="시간설정 2"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <Button
            android:id="@+id/datebt1"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/button2"
            android:fontFamily="@font/answhdtjd"
            android:text="날짜설정 2"
            android:textColor="@color/black"
            android:textSize="30dp" />
    </LinearLayout>

</LinearLayout>



